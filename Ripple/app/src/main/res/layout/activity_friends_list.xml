<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    tools:context="com.ripple.ripple.FriendsListActivity"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:background="#474746"
        android:id="@+id/linearLayout3"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:text="Requests"
            android:id="@+id/requestsButtonXML"
            android:textSize="16dp"
            android:layout_margin="5dp"
            android:layout_marginLeft="0dp"
            android:background="#474746"
            android:layout_gravity="center_vertical"
            android:textColor="#fcfffc" />

        <Button
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Add Friend"
            android:id="@+id/addFriendButtonXML"
            android:textSize="16dp"
            android:layout_margin="5dp"
            android:background="#474746"
            android:layout_gravity="center_vertical"
            android:textColor="#fcf6ff" />
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/friendsListViewXML"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/linearLayout3" />

</RelativeLayout>
